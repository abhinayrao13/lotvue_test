<div class="container">
<p id="notice"><%= notice %></p>

<div class="float-left"><h3>Roles</h3></div>

<div class="float-right">
  <%= link_to 'New Role', new_role_path, :class => "btn btn-large btn-primary" %>
</div>

<table id="roles-table" class="table table-striped table-bordered" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Role type</th>
      <th colspan="3"></th>
      <th style="display:none"></th>
      <th style="display:none"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role_type %></td>
        <td><%= link_to 'Show', role %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<% content_for :javascript_includes do %>
<script>
  $(document).ready(function() {
    $('#roles-table').DataTable({
      paging: true,
      columns: [
        null,
        {"orderable": false},
        {"orderable": false},
        {"orderable": false}
      ]
    });
  });
</script>
<% end %>
