<%= form_with(model: role, local: true) do |form| %>
  <% if role.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>

      <ul>
      <% role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">

      <div class="form-group">
        <%= form.label :role_type %>
        <%= form.text_field :role_type, class: "form-control", placeholder: "Enter role type" %>
      </div>

      <div class="actions">
        <%= form.submit 'Submit', class: "btn btn-success float-left" %>
        <%= link_to 'Back', roles_path, class: "btn btn-primary float-right"  %>
      </div>

    </div>
  </div>
<% end %>
